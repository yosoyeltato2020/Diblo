#:kivy 2.2.0
#:import dp kivy.metrics.dp
#:import DibujoWidget pantalla_dibujo.DibujoWidget

ScreenManager:
    WelcomeScreen:
    DibujoScreen:

<WelcomeScreen@Screen>:
    name: 'welcome'
    FloatLayout:
        Image:                       # -------------  NUEVO  -------------
            source: 'diblo.png'      # pon el PNG en la misma carpeta
            allow_stretch: True
            keep_ratio: False
            size: self.parent.size
            pos: self.parent.pos
        Button:
            text: 'Comenzar'
            font_size: '32sp'
            size_hint: .35, .15
            pos_hint: {'center_x': .5, 'y': .05}
            background_color: .3, .6, 1, 1
            background_normal: ''
            on_release:
                app.root.current = 'dibujo'

<DibujoScreen@Screen>:
    name: 'dibujo'
    on_pre_enter: root.ids.widget.cambiar_palabra()
    DibujoWidget:
        id: widget
